@model Hotel.Web.Models.Responses.FloorViewResult

@{
    ViewData["Title"] = "Edit";
}

<h1>Ver Piso</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Codigo</label>
                <input asp-for="floorId" class="form-control" readonly />
                <span asp-validation-for="floorId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">State</label>
                <input asp-for="state" class="form-control" readonly />
                <span asp-validation-for="state" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Registration Date</label>
                <input asp-for="registrationDate" class="form-control" readonly />
                <span asp-validation-for="registrationDate" class="text-danger"></span>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
